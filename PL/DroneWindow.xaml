<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneWindow" Height="600" Width="900">
    <Grid x:Name="DroneData">
        <Grid x:Name="AddDrone" >
            <Label Name="DroneIDLabel"  Content = "Enter drone ID:" VerticalAlignment ="Top" Margin = "43, 30, 0, 0"/>
            <TextBox Name =  "DroneID" VerticalAlignment = "Top" Margin = "199, 30, 0, 0"/>
            <Label  Name="MaxWeightLabel" Content = "Enter drone max weight:" VerticalAlignment ="Top" Margin = "43, 60, 0, 0"/>
            <ComboBox Name = "max_weight" VerticalAlignment = "Top" Margin = "199, 60, 0, 0"/>
            <Label Name="DroneModelLabel"  Content = "Enter drone model:" VerticalAlignment ="Top" Margin = "43, 90, 0, 0"/>
            <TextBox Name ="DroneModel" VerticalAlignment = "Top" Margin = "199, 90, 0, 0"/>
            <Label  Name="StationIdLabel" Content = "Enter drone station ID:" VerticalAlignment ="Top" Margin = "43, 120, 0, 0" Visibility="Hidden"/>
            <TextBox Name = "station_ID" VerticalAlignment = "Top" Margin = "199, 120, 0, 0" Visibility="{Binding ElementName= StationIdLabel, Path=Visibility}"/>
            <Button   Name="sendNewDrone" Content = "Send" VerticalAlignment ="Top" Margin = "43, 150, 0, 0" Click = "AddNewDrone" Visibility="{Binding ElementName= StationIdLabel, Path=Visibility}"/>
            <Button  Name="CancelButton" Content = "Cancel" VerticalAlignment ="Top" Margin = "43, 170, 0, 0" Click = "DataWindowClosing" Visibility="{Binding ElementName= StationIdLabel, Path=Visibility}"/>
        </Grid>
        <Grid x:Name="UpdateDroneGrid">

            <Label Name="batteryStatusLabel" Content = "drone battery status:" VerticalAlignment = "Top" Margin ="43, 120, 0, 0"  Visibility="Visible"/>
            <ComboBox Name = "batteryStatus" VerticalAlignment = "Top" Margin = "199, 120, 0, 0" IsEnabled="False"  Visibility="{Binding ElementName=batteryStatusLabel , Path=Visibility}"/>
            <Label Name="statusLabel" Content = "drone status:" VerticalAlignment = "Top" Margin ="43, 150, 0, 0"  Visibility="{Binding ElementName=batteryStatusLabel , Path=Visibility}"/>
            <ComboBox Name = "Status" VerticalAlignment = "Top" Margin = "199, 150, 0, 0" IsEnabled="False"  Visibility="{Binding ElementName=batteryStatusLabel , Path=Visibility}"/>
            <Label Name="longitudeLabel" Content = "drone longitude:" VerticalAlignment = "Top" Margin ="43, 180, 0, 0"  Visibility="{Binding ElementName=batteryStatusLabel , Path=Visibility}"/>
            <TextBox Name = "longitude" VerticalAlignment = "Top" Margin = "199, 180, 0, 0" IsEnabled="False"  Visibility="{Binding ElementName=batteryStatusLabel , Path=Visibility}"/>
            <Label Name="latitudeLabel" Content = "drone latitude:" VerticalAlignment = "Top" Margin ="43, 210, 0, 0" Visibility="{Binding ElementName=batteryStatusLabel , Path=Visibility}"/>
            <TextBox Name = "latitude" VerticalAlignment = "Top" Margin = "199, 210, 0, 0" IsEnabled="False"  Visibility="{Binding ElementName=batteryStatusLabel , Path=Visibility}"/>
            <Label Name="timechargeLabel" Content="write time of charge here:" VerticalAlignment ="Top" Visibility="Hidden" />
            <TextBox Name="timecharge" VerticalAlignment ="Top"  Visibility="Hidden" />
        </Grid>



    </Grid>
</Window>
